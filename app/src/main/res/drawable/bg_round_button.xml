<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_accent">
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#30FFFFFF" />
                </shape>
            </item>
            <!-- Inner radial gradient (glass depth) -->
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="24dp"
                        android:centerX="50%"
                        android:centerY="35%"
                        android:startColor="#15FFFFFF"
                        android:endColor="#00000000" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="#25FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
