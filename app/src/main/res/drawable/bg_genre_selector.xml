                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#FF3A3A3A"
                        android:endColor="#FF2A2A2A" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
