<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_bg" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <!-- Inner gradient for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#08FFFFFF" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <!-- Top edge highlight (glass reflection effect) -->
    <item
        android:top="0dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#25FFFFFF"
                android:endColor="#00FFFFFF" />
            <size android:height="1dp" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <!-- Border stroke -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/glass_border_light" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <!-- Subtle accent glow at top center -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="50%"
                android:centerY="-10%"
                android:startColor="#15FF6B35"
                android:endColor="#00000000" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
</layer-list>
