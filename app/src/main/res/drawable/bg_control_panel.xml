<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main glass background - deeper, more refined -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2101014" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>
    <!-- Inner gradient for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#06FFFFFF" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>
    <!-- Top edge highlight (subtle glass reflection) -->
    <item
        android:top="0dp"
        android:left="48dp"
        android:right="48dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#18FFFFFF"
                android:endColor="#00FFFFFF" />
            <size android:height="1dp" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>
    <!-- Border stroke - subtle -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#10FFFFFF" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>
    <!-- Subtle accent glow at top center -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="50%"
                android:centerY="-5%"
                android:startColor="#10FFAB60"
                android:endColor="#00000000" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>
</layer-list>
