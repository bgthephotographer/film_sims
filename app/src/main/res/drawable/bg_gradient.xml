<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="50%"
                android:centerY="30%"
                android:startColor="#FF1A1A1A"
                android:endColor="#FF0A0A0A" />
        </shape>
    </item>
    <!-- Subtle accent glow at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#15FF8C00"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
