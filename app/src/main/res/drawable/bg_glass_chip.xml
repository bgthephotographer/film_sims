<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - accent gradient -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Glow effect -->
            <item
                android:left="-2dp"
                android:top="-2dp"
                android:right="-2dp"
                android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent_glow" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
            <!-- Gradient background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Top shine -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00FFFFFF"
                        android:endColor="#25FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item
                android:left="-2dp"
                android:top="-2dp"
                android:right="-2dp"
                android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent_glow" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00FFFFFF"
                        android:endColor="#25FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state - glass effect -->
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#35FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#10FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#20FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
